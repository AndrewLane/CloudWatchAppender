<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <add key="AWSAccessKey" value="YOURAWSACCESSKEY"/>
    <add key="AWSSecretKey" value="YOURAWSSECRETKEY"/>
    <add key="AWSServiceEndpoint" value="https://monitoring.eu-west-1.amazonaws.com"/>
  </appSettings>

  <log4net>
    <appender name="CloudWatchAppender" type="Log4NetCloudwatchAppender.Log4NetCloudwatchAppender, Log4NetCloudwatchAppender">
    </appender>
    
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>

    <logger name="Amazon">
      <level value="OFF" />
    </logger>
    
    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="CloudWatchAppender" />
    </root>
  </log4net>  
</configuration>